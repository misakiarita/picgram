<p id="notice"><%= notice %></p>

<p>
  <strong>Image:</strong>
  <br>
  <%= image_tag @post.image.url %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<% unless @post.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(post_id: @post.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
<br>
<% if @post.user_id == current_user.id %>
<%= link_to '削除', @post, method: :delete, data: {confirm: 'Are you sure?'} %> |
<%= link_to '編集', edit_post_path(@post) %> |
<% end %>
<%= link_to '投稿一覧', posts_path %>

