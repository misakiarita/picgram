<%= form_with(model: post, local: true) do |form| %>
  
  <div class="field">
    <%= form.label :image %>
    <%= image_tag(post.image.url) if post.image && post.image.url %>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>