<h1>Edit</h1>

<%= form_with(model: @user, local: true, url: user_path(@user.id)) do |f| %> 
  <%= f.label :avatar %>
  <%= f.file_field :avatar %>
  <br>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br>
  <%= f.submit "Edit my account" %>
<% end %>

